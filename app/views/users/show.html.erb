<div class="row">

	<%= render 'books/post', user: @user, book: @book %>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">

			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |books|%>
				<tr>
					<td>
						<%= link_to user_path(books.user.id) do %>
							<%= attachment_image_tag books.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", class:"attachment user profile_image fallback"%>
						<% end %>
					</td>
					<td>
						<%= link_to book_path(books.id) do %>
							<%= books.title %>
						<% end %>
					</td>
					<td>
						<%= books.body %>
					</td>
				</tr>
				<% end %>
			</tbody>

		</table>
	</div>

</div>