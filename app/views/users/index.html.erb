<div class="row">

	<%= render 'books/post', user: @user, book: @book %>


	<div class="col-xs-9">
		<h2>Users</h2>
		<table class="table">

			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |users| %>
					<tr>
						<td>
							<%= attachment_image_tag users, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", class:"attachment user profile_image fallback"%>
						</td>
						<td>
							<%= users.name %>
						</td>
						<td>
							<%= link_to "Show", user_path(users.id)%>
						</td>
					</tr>
				<% end %>
			</tbody>

		</table>
	</div>

</div>


